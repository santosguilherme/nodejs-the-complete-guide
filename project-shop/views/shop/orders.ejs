<body>
<%- include('../includes/navigation.ejs') %>
<main>
    <% if (orders.length > 0)  { %>
        <ul class="">
            <% orders.forEach(order =>  { %>
                <li class="">
                    <h1><%= order.id %></h1>
                    <ul class="">
                        <% order.products.forEach(product =>  { %>
                            <li>
                                <p><%= product.title %> (<%= product.orderItem.quantity %>)</p>
                            </li>
                        <% }) %>
                    </ul>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <h1>No orders!</h1>
    <% } %>
</main>
<%- include('../includes/end.ejs') %>
